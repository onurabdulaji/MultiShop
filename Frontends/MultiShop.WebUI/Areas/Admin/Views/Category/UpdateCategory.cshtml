@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Guncelleme Sayfasi</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden"  asp-for="CategoryId" />
                        <br />
                        <label>Kategori Adi</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                        <br />
                        <button class="btn-primary">Kategori Guncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>




